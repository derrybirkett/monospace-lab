---
import Layout from "../components/Layout.astro";
import Heading from "../components/Heading.astro";
import Prose from "../components/Prose.astro";
---

<Layout title="About — Monospace.Labs" description="About Monospace.Labs.">
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "About Monospace.Labs",
    "description": "About Monospace.Labs.",
    "url": new URL("/about", Astro.site).href,
    "isPartOf": {
      "@type": "WebSite",
      "name": "Monospace.Labs",
      "url": Astro.site?.href,
    },
  })} />
  <section class="about">
    <Heading as="h1">About</Heading>
    <Prose>
      <p>
        Monospace.Labs is where I document what I build — from private cloud
        infrastructure to agentic development systems. Real projects, real
        decisions, real trade-offs.
      </p>
      <p>
        Built by <a href="https://github.com/derrybirkett">Derry Birkett</a>.
        Infrastructure, automation, and self-hosted systems.
      </p>
      <p>
        No newsletters, no pop-ups, no tracking. Just writing.
      </p>
    </Prose>
  </section>
</Layout>

<style>
  .about {
    max-width: var(--width-content);
  }
</style>
